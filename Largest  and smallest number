#include<stdio.h>
void main()
{
  
   int a,b,c, larg, small;

   printf("Enter Three Number\n");
   scanf("%d %d %d",&a,&b,&c);

  // To find the Largest number among a, b and c
  if(a>b)
  {
      if(a>c)
        larg = a;
      else
        larg = c;
  }
  else
  {
      if(b>c)
        larg = b;
      else
        larg = c;
  }
 // To find the smallest number among a, b and c
  if(a<b)
  {
      if(a<c)
        small = a;
      else
        small = c;
  }
  else
  {
      if(b<c)
        small = b;
      else
        small = c;
  }

 printf("%d is largest number\n",larg);


 printf("%d is Smallest Number ",small);

return 0;
}
